{% extends "resume/layout.html.twig" %}

{% block title %}Confirmation des informations
{% endblock %}

{% block content %}
    <div>
        <h2 class="mb-4 text-2xl font-semibold border-b-2 border-orange-500">Informations générales</h2>
        <div class="flex flex-col">
            <div>Nom: {{ resume.firstName ~ ' ' ~ resume.lastName }}</div>
            <div>Adresse mail: {{ resume.email }}</div>
            <div>Téléphone: {{ resume.phone }}</div>
            <div class="flex flex-col">
                <span>Adresse:</span>
                <div class="flex flex-col ml-4">
                    <span>Complément: {{ resume.address.address }}</span>
                    <span>Ville: {{ resume.address.city }}</span>
                    <span>Code postale: {{ resume.address.zipCode }}</span>
                    <span>Pays: {{ resume.address.country }}</span>
                </div>
            </div>
        </div>

        <h2 class="my-4 text-2xl font-semibold border-b-2 border-orange-500">Compétences</h2>
        <div class="flex flex-col">
            {{ resume.skills|default('<vide>') }}
        </div>

        <h2 class="my-4 text-2xl font-semibold border-b-2 border-orange-500">Expériences</h2>
        <div class="flex flex-col mb-6">
            {% for exp in resume.experiences %}
                <div class="flex flex-col">
                    <span>Titre: {{ exp.name }}</span>
                    <span>Entreprise, école: {{ exp.company }}</span>
                    <span> Localisation: {{ exp.localization }}</span>
                    <span>Durée: {{ exp.startedAt|date('d/m/Y') }} à {{ exp.endedAt|date('d/m/Y')|default('Aujourd\'hui') }}</span>
                    
                    <span>Description: {{ exp.description|default('<vide>') }}</span>
                </div>
                {% if not loop.last %}
                    <hr>
                {% endif %}
            {% else %}
                <div class="text-lg">Aucune expérience</div>
            {% endfor %}
        </div>
    </div>

    <form method="POST" class="flex items-center w-full gap-6">
        <a class="px-6 py-2 text-center border-2 bg-white text-[#F49643] font-semibold hover:opacity-75 duration-150 rounded-md w-1/2" href="{{ path('app_resume') }}">Modifier</a>
        <button class="px-6 py-2 bg-[#F49643] text-white w-1/2 font-semibold hover:opacity-75 duration-150 rounded-md" type="submit">
            Confirmer
        </button>
    </form>
{% endblock %}